PROCEDURE DotProduct(var p: INTEGER,var n:INTEGER,var t1:ARRAY_OF INTEGER[], var t2:ARRAY_OF INTEGER[])
VAR
    i,p:INTEGER:=0;
BEGIN
    FOR i FROM 0 TO n-1 STEP 1  DO
       p:=p+t1[i]*t2[i] ;
    END_FOR
    write("le produit scalaire est:=",p)
END



